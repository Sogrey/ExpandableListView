<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:layout_width="40dp"
        android:orientation="vertical" >

       <!--  <ImageView
            android:id="@+id/img_item_practice_chapters_child_expand_0"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/img_item_practice_chapters_child_0" /> -->

        <View
             android:id="@+id/img_item_practice_chapters_child_top"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/between_line" />
        <ImageView
            android:id="@+id/img_item_practice_chapters_child_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_item_practice_chapters_child" />
        <View
            android:id="@+id/img_item_practice_chapters_child_bottom"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/between_line" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_item_practice_chapters_child_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:text="正数和负数"
        android:textColor="@color/txt_practice_type_listitem_label"
        android:textSize="@dimen/frontsize_normal" />

    <TextView
        android:id="@+id/txt_item_practice_chapters_child_times"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:textColor="@color/txt_practice_type_listitem_times"
        android:text="" />

    <ImageView
        android:id="@+id/img_item_practice_chapters_child_edit"
            android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_begin_answer" 
        android:layout_margin="20dp"/>

</LinearLayout>